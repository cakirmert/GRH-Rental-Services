# This is an example of a .env file for the GRH Booking application.
# Make sure to fill in the required fields in your own .env file.
# Do not commit this file to your version control system.
# Use .env.example as a template for your .env file.

# NextAuth Configuration
AUTH_URL=http://localhost:3000
AUTH_SECRET=your_auth_secret_here
CRON_SECRET=${AUTH_SECRET}

# Database
DATABASE_URL=your_postgres_database_url_here

# Email Configuration (for SMTP authentication)
EMAIL_PASSWORD=your_email_app_password_here

# Vercel Blob Storage Configuration
BLOB_URL_BASE=https://your_blob_url_base_here
BLOB_READ_WRITE_TOKEN=your_blob_token_here

# Push Notifications (VAPID keys)
VAPID_PRIVATE_KEY=your_vapid_private_key_here
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# WebAuthn/Passkey Configuration
RP_ID=localhost
RP_NAME=GRH Rental Services
ORIGIN=http://localhost:3000
# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
